<div class="topic-edit-wrapper" >
  <div class="container">
    <div class="row">
      <dic class="col-md-6 col-md-offset-3">
        <h1 class="text-center">Add Picture</h1>
        <%= form_for @topic do |f| %>
          <div class="form-group">
            <%= f.label :image%>
            <%= f.file_field :image %>
            <%= image_tag @topic.image.url, style: "width: 50%" %>
          </div>
          
          <div class="form-group">
            <%= f.label :description %>
            <%= f.text_area :description, class: 'form-control' %>
          </div>
          
          <% if !current_user.nil? %>
          <%= f.submit '編集', class: 'btn btn-black btn-block' %>
          <% end %>
          
          <% end %>
      </dic>
    </div>
  </div>
</div>